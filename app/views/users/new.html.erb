<h1>Form</h1>
<form action="<%=users_path=%>" method="post" accept-charset="UTF-8">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div>Username:</div> <input type="text" name="user[username]"><br>
  <div>Email:</div> <input type="text" name="user[email]"><br>
  <div>Password:</div> <input type="password" name="user[password]"><br>
  <input type="submit" value="Submit">
</form>
