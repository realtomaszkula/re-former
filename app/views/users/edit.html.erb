<%= form_for @user do |f| %>
  <%= f.label :username %> <br>
    <%= f.text_field :username , placeholder: "richAF2000" %> <br>
  <%= f.label :email %> <br>
    <%= f.email_field :email, placeholder: "example@gmail.com"%> <br>
  <%= f.label :password %> <br>
    <%= f.password_field :password, placeholder: "case sensitive" %> <br>
  <%= f.submit "Send" %>
<% end %>

<% unless @user.errors.empty? %>
  <% @user.errors.full_messages.each do |e| %>
    <p> <%= e  %> </p>
  <% end %>
<% end %>